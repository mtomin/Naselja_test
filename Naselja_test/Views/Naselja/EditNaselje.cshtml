
@model Naselje
@using System.Linq;
<p>Uređivanje naselja</p>

<div>
    <form asp-controller="Naselja" asp-action="SaveChanges" data-ajax="true" data-ajax-method="POST" id="partialForm" data-ajax-mode="replace" data-ajax-update="#partialForm" >
        <div class="md-form mt-0" style="padding-top: 10px">
            <div class="form-group">
                @Html.LabelFor(model => model.Naziv, new { @class = "control-label col-sm-2" })
                @Html.TextBoxFor(model => model.Naziv, new { @class = "form-control col-sm-10" })
                @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PostanskiBroj, new { @class = "control-label col-sm-2" })
                @Html.TextBoxFor(model => model.PostanskiBroj, new { @class = "form-control col-sm-10" })
                @Html.ValidationMessageFor(model => model.PostanskiBroj, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Drzava.Naziv, "Država", new { @class = "control-label col-sm-2" })
                @Html.DropDownListFor(model => model.Drzava.ID, new SelectList((ViewData["CountryList"] as List<Drzava>), "ID", "Naziv"), new { @id = "dropdownMenu", @class = "form-control dropdownMenu", @style = "color: black;" })
                @Html.ValidationMessageFor(model => model.Drzava.Naziv, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.HiddenFor(model => model.ID, Model.ID)
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-1">
                    <input type="submit" value="Spremi izmjene" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.js" type="text/javascript"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js" type="text/javascript"></script>
<link href="~/lib/select2/css/select2.min.css" rel="stylesheet">
<script src="~/lib/select2/js/select2.min.js"></script>

<script>
    $(document).ready(function () {
        $('.dropdownMenu').select2({
            minimumInputLength: 2
        });
    });
</script>

